<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseActivityToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">@dimen/extraLargeText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="autoSizeMinTextSize">@dimen/extraLargeText</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:backgroundTint">@color/bottomSheetBackground</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/largeMargin</item>
        <item name="cornerSizeTopLeft">@dimen/largeMargin</item>
        <item name="cornerSizeBottomRight">@dimen/mediumMargin</item>
        <item name="cornerSizeBottomLeft">@dimen/mediumMargin</item>
    </style>
    
    <style name="designedToast">
        <item name="stColorBackground">#FFFFFF</item>
        <item name="stTextColor">#2799FB</item>
        <item name="stStrokeColor">#2799FB</item>
        <item name="stStrokeWidth">1dp</item>
    </style>
</resources>